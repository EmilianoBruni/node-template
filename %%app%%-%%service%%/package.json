{
  "name": "%%app%%-%%service%%",
  "description": "This project was bootstrapped with Fastify-CLI.",
  "type": "module",
  "version": "0.1.0",
  "main": "src/app.ts",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "build": "npm run copy && tsc",
    "clean": "rimraf ./dist",
    "copy": "copyfiles -u 1 \"src/**/*.cjs\" dist",
    "dev": "npm run builds && concurrently -k -p \"[{name}]\" -n \"TypeScript,App\" -c \"yellow.bold,cyan.bold\" \"npm:watch\" \"npm:dev:start\"",
    "dev:start": "fastify start --ignore-watch=.ts$ -w -o -l info -P dist/app.js",
    "test": "tap -j1 --allow-incomplete-coverage \"./test/**/*.test.?(c)[tj]s\"",
    "lint": "eslint \"src/**/*.[jt]s?(x)\" \"test/**/*.?(c)[jt]s\"",
    "lint:fix": "npm run lint -- --fix",
    "start": "npm run build && fastify start -l info dist/app.js",
    "watch": "npm run copy && tsc -b -v -i -w"
  },
  "author": "Emiliano Bruni <info@ebruni.it>",
  "keywords": [
    "fastify",
    "typescript",
    "node",
    "nodejs"
  ],
  "license": "Apache-2.0",
  "dependencies": {
    "fastify": "^4.26.0",
    "@fastify/autoload": "^5.8.0",
    "@fastify/sensible": "^5.5.0",
    "close-with-grace": "^1.2.0",
    "dotenv": "^16.4.1",
    "fastify-cli": "^6.1.0",
    "fastify-plugin": "^4.5.1"
  },
  "devDependencies": {
    "@tapjs/core": "^1.5.0",
    "@types/node": "^20.11.16",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "concurrently": "^8.2.2",
    "copyfiles": "^2.4.1",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard-with-typescript": "^43.0.1",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-n": "^15.0.0 || ^16.0.0 ",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-promise": "^6.0.0",
    "fastify-tsconfig": "^2.0.0",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "tap": "^18.7.0",
    "typescript": "^5.3.3"
  }
}
